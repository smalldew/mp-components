/* components/shareView.wxss */
.background {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  position: absolute;
}
.foreground {
  width: 100%;
  height: 432rpx;
  background: white;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}
.title {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  font-size: 36rpx;
  color: #6A6A6A;
}
.splitLine {
  width: 100%;
  height: 1rpx;
  background: rgba(0,0,0,0.10);
}
.sharePlatform {
  /* background: red; */
  display: flex;
  justify-content: space-between;
}
.plantform {
  width: 33.3%;
  height: 210rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.platform_img {
  display: flex;
  width: 100rpx;
  height: 100rpx;
}
.platform_text {
  display: flex;
  font-size: 28rpx;
  color: #6A6A6A;
  text-align: center;
}
.moments {
  height: 210rpx;
  /* background: yellow; */
}
.friends { 
  height: 210rpx;
  /* background: blue; */
}
.faces {
  height: 210rpx;
  /* background: green; */
}
.splitBottomLine {
  width: 100%;
  height: 12rpx;
  background: #E5E5E5;
}
.cancel {
  width: 100%;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  color: #000000;
  text-align: center;
}